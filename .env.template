# ============================================
# Advance Chatbot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# ====================
# Application Settings
# ====================
APP_NAME=Advance Chatbot
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=9000

# ====================
# OpenAI Configuration
# ====================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=2000

# ====================
# Database Configuration (SQL Server)
# ====================
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_SERVER=your_database_server
DB_PORT=1433
DB_NAME=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Connection Pool Settings
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_MAX_OVERFLOW=20

# ====================
# ChromaDB Configuration (Vector Store)
# ====================
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=database_schema

# Embedding Configuration
EMBEDDING_PROVIDER=sentence-transformers  # Options: sentence-transformers, google
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Google Embedding Settings
GOOGLE_EMBEDDING_MODEL=models/text-embedding-004
GOOGLE_EMBEDDING_TASK_TYPE=retrieval_document

# ====================
# LangGraph Configuration
# ====================
LANGGRAPH_MAX_ITERATIONS=10
LANGGRAPH_TIMEOUT=60

# ====================
# Security & Authentication
# ====================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ====================
# Email Configuration (Phase 4)
# ====================
# Choose ONE of the following email providers:
# Option 1: SendGrid (Recommended for production)
# Option 2: SMTP (Gmail, Outlook, or any SMTP server)

# --- Option 1: SendGrid Configuration ---
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=Advance Chatbot

# --- Option 2: SMTP Configuration ---
# Uncomment and configure for Gmail/Outlook/custom SMTP
# Gmail: smtp.gmail.com:587 (requires App Password if 2FA enabled)
# Outlook: smtp-mail.outlook.com:587
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password_here
# SMTP_USE_TLS=True

# Email Validation & Rate Limiting
# MAX_EMAILS_PER_HOUR=10  # Per user rate limit (default: 10)
# MAX_EMAILS_PER_DAY=50   # Per user daily limit (default: 50)
# ALLOWED_EMAIL_DOMAINS=["yourcompany.com"]  # Whitelist domains (optional)

# ====================
# Report Generation
# ====================
REPORTS_OUTPUT_DIR=./reports_output
REPORTS_MAX_ROWS=10000
REPORTS_DEFAULT_FORMAT=pdf

# PDF Configuration
PDF_PAGE_SIZE=A4
PDF_FONT_FAMILY=Arial

# ====================
# Role-Based Access Control (RBAC)
# ====================
# Default admin user
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=changeme123

# Role Hierarchy
ROLES=["ADMIN", "HR_MANAGER", "HR_STAFF", "VIEWER"]

# ====================
# Action Execution
# ====================
# Require confirmation for destructive actions
REQUIRE_ACTION_CONFIRMATION=True
ACTION_TIMEOUT_SECONDS=300

# ====================
# Logging & Monitoring
# ====================
LOG_DIR=./logs
LOG_FILE=advance_chatbot.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Audit Logging
ENABLE_AUDIT_LOG=True
AUDIT_LOG_FILE=audit.log

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ====================
# Cache Configuration
# ====================
ENABLE_CACHE=True
CACHE_TTL_SECONDS=3600

# ====================
# Testing Configuration
# ====================
TESTING=False
TEST_DATABASE_NAME=test_chatbot_db
