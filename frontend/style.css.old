* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #4F46E5;
    --primary-hover: #4338CA;
    --success-color: #10B981;
    --error-color: #EF4444;
    --bg-color: #F9FAFB;
    --surface-color: #FFFFFF;
    --text-primary: #111827;
    --text-secondary: #6B7280;
    --border-color: #E5E7EB;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
}

.container {
    width: 100%;
    max-width: 1200px;
    height: 90vh;
    background: var(--surface-color);
    border-radius: 16px;
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.header {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
    color: white;
    padding: 20px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: var(--shadow-md);
}

.logo {
    display: flex;
    align-items: center;
    gap: 15px;
}

.logo h1 {
    font-size: 24px;
    font-weight: 600;
}

.connection-status {
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.1);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
}

.status-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--error-color);
    animation: pulse 2s infinite;
}

.status-dot.connected {
    background: var(--success-color);
    animation: none;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.chat-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 30px;
    background: var(--bg-color);
}

.chat-messages::-webkit-scrollbar {
    width: 8px;
}

.chat-messages::-webkit-scrollbar-track {
    background: var(--bg-color);
}

.chat-messages::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 4px;
}

.chat-messages::-webkit-scrollbar-thumb:hover {
    background: var(--text-secondary);
}

.welcome-message {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
    border-left: 4px solid var(--primary-color);
}

.welcome-message h2 {
    color: var(--text-primary);
    margin-bottom: 10px;
    font-size: 20px;
}

.welcome-message p {
    color: var(--text-secondary);
    margin-bottom: 20px;
}

.example-queries {
    background: var(--bg-color);
    padding: 20px;
    border-radius: 8px;
    margin-top: 20px;
}

.example-queries strong {
    color: var(--text-primary);
}

.example-queries ul {
    margin-top: 10px;
    padding-left: 20px;
}

.example-queries li {
    color: var(--text-secondary);
    margin: 8px 0;
    cursor: pointer;
    transition: color 0.2s;
}

.example-queries li:hover {
    color: var(--primary-color);
}

.message {
    margin-bottom: 20px;
    animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.message-user {
    display: flex;
    justify-content: flex-end;
}

.message-user .message-content {
    background: var(--primary-color);
    color: white;
    padding: 12px 18px;
    border-radius: 18px 18px 4px 18px;
    max-width: 70%;
    box-shadow: var(--shadow-sm);
}

.message-bot {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.message-bot .message-content {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
    border-left: 4px solid var(--primary-color);
}

.message-bot .answer {
    color: var(--text-primary);
    line-height: 1.6;
    margin-bottom: 15px;
}

.sql-query {
    background: #1E293B;
    color: #E2E8F0;
    padding: 15px;
    border-radius: 8px;
    font-family: 'Courier New', monospace;
    font-size: 13px;
    overflow-x: auto;
    margin: 15px 0;
    position: relative;
}

.sql-query-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #334155;
}

.sql-query-label {
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #94A3B8;
}

.copy-button {
    background: #334155;
    border: none;
    color: #E2E8F0;
    padding: 4px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 11px;
    transition: background 0.2s;
}

.copy-button:hover {
    background: #475569;
}

.sql-query pre {
    margin: 0;
    white-space: pre-wrap;
    word-wrap: break-word;
}

.metadata {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid var(--border-color);
}

.metadata-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--text-secondary);
}

.metadata-item svg {
    width: 16px;
    height: 16px;
    color: var(--primary-color);
}

.error-message {
    background: #FEE2E2;
    border-left: 4px solid var(--error-color);
    padding: 15px;
    border-radius: 8px;
    margin-top: 10px;
}

.error-message p {
    color: #991B1B;
    font-size: 13px;
}

.chat-input-container {
    padding: 20px 30px;
    background: white;
    border-top: 1px solid var(--border-color);
}

.chat-form {
    display: flex;
    gap: 10px;
    align-items: center;
}

.chat-input {
    flex: 1;
    padding: 14px 20px;
    border: 2px solid var(--border-color);
    border-radius: 24px;
    font-size: 15px;
    outline: none;
    transition: border-color 0.2s;
}

.chat-input:focus {
    border-color: var(--primary-color);
}

.send-button {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--primary-color);
    color: white;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, transform 0.1s;
    box-shadow: var(--shadow-sm);
}

.send-button:hover {
    background: var(--primary-hover);
    transform: scale(1.05);
}

.send-button:active {
    transform: scale(0.95);
}

.send-button:disabled {
    background: var(--border-color);
    cursor: not-allowed;
    transform: none;
}

.loading-indicator {
    display: none;
    align-items: center;
    gap: 10px;
    color: var(--text-secondary);
    margin-top: 10px;
    font-size: 14px;
}

.loading-indicator.active {
    display: flex;
}

.spinner {
    width: 20px;
    height: 20px;
    border: 3px solid var(--border-color);
    border-top-color: var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Download Button Styles */
.download-button-container {
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid var(--border-color);
}

.download-report-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s, transform 0.1s;
    box-shadow: var(--shadow-sm);
}

.download-report-button:hover {
    background-color: var(--primary-hover);
    box-shadow: var(--shadow-md);
}

.download-report-button:active {
    transform: scale(0.98);
}

.download-report-button svg {
    flex-shrink: 0;
}

@media (max-width: 768px) {
    .container {
        height: 100vh;
        border-radius: 0;
    }

    .header {
        padding: 15px 20px;
    }

    .logo h1 {
        font-size: 18px;
    }

    .chat-messages {
        padding: 20px;
    }

    .message-user .message-content {
        max-width: 85%;
    }

    .chat-input-container {
        padding: 15px 20px;
    }

    .metadata {
        flex-direction: column;
        gap: 8px;
    }
}
